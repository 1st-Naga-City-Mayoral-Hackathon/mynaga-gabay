{
    "name": "@mynaga/shared",
    "version": "0.1.0",
    "private": true,
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "build": "[ -d dist ] && echo 'Using pre-built dist' || npx tsup src/index.ts --format cjs,esm --dts",
        "dev": "npx tsup src/index.ts --format cjs,esm --dts --watch",
        "clean": "rm -rf dist",
        "typecheck": "tsc --noEmit",
        "lint": "eslint src/"
    },
    "dependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.3.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0"
    }
}