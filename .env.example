# ===========================================
# MyNaga Gabay Environment Configuration
# Copy this file to .env and fill in your values
# ===========================================

# Claude AI
CLAUDE_API_KEY=sk-ant-api03-xxxxx

# PostgreSQL Database (with pgvector extension)
DATABASE_URL=postgresql://username:password@localhost:5432/mynaga_gabay

# Application
NODE_ENV=development
API_PORT=4000
WEB_URL=http://localhost:3000
API_URL=http://localhost:4000

# Voice Processing (Optional - fill when ready)
# WHISPER_API_KEY=
# ELEVENLABS_API_KEY=

# Feature Flags
ENABLE_VOICE=false
ENABLE_BIKOL=true

# Google Places API (for facilities data)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Groq API Key
GROQ_API_KEY=

# PGVector
PGVECTOR_DATABASE_URL=

# Postgres (for Prisma/NextAuth)
POSTGRES_DATABASE_PUBLIC_URL=postgresql://username:password@localhost:5432/mynaga_gabay

# N8N RAG Pipeline (Production)
N8N_WEBHOOK_URL=https://your-n8n.com/webhook/mynaga-gabay-chat
N8N_TIMEOUT=60000

# N8N Prescription Scanner (for frontend - must be NEXT_PUBLIC_ prefixed)
NEXT_PUBLIC_N8N_WEBHOOK_URL=http://localhost:5678

# NextAuth
NEXTAUTH_SECRET=
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (GCP)
GCP_CLIENT_ID=
GCP_CLIENT_SECRET=

# ===========================================
# Rich Chat Feature (Booking & Routing)
# ===========================================

# Express API Database (for booking/facilities)
API_DATABASE_URL=postgresql://username:password@localhost:5432/mynaga_api

# Express API URL (for Next.js server-to-server calls)
EXPRESS_API_URL=http://localhost:4000

# Internal API Key (shared secret for Next.js â†’ Express auth)
# Generate with: openssl rand -base64 32
INTERNAL_API_KEY=your-secure-internal-key-here

# OSRM Routing Server (public default, or self-hosted)
OSRM_BASE_URL=https://router.project-osrm.org

# OSRM Profile Names (optional, for custom OSRM instances)
# OSRM_DRIVING_PROFILE=driving
# OSRM_WALKING_PROFILE=foot
# OSRM_CYCLING_PROFILE=cycling

# AI Service
AI_SERVICE_API_KEY=
